<% include ./partials/header %>
<div class ="ui main text container segment">
    <divclass="ui huge header">New Blog</div>
    <form class="ui forma" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" placeholder="Image">
        </div>
        <div class="field">
            <label>Content/Post</label>
            <textarea name="blog[body]"></textarea>
        </div>
        <input class="ui blue basic button" type="submit">
    </form>
</div>
<% include ./partials/footer %>