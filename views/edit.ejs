<% include ./partials/header %>
<div class ="ui main text container segment">
    <divclass="ui huge header">Edit Blog <%= blog.title %></div>
    <form class="ui forma" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" value="<% blog.image %>">
        </div>
        <div class="field">
            <label>Content/Post</label>
            <textarea name="blog[body]"><% blog.body %></textarea>
        </div>
        <input class="ui blue basic button" type="submit">
    </form>
</div>
<% include ./partials/footer %>